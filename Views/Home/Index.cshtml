@{
    ViewData["Title"] = "Home Page";
}




<style> 
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    header, footer {
        background-color: #f2f2f2;
        padding: 10px 20px;
    }

    main {
        padding: 20px;
    }

    .hero {
        text-align: center;
        margin-bottom: 40px;
    }

        .hero h1 {
            font-size: 36px;
            margin-bottom: 10px;
        }

        .hero p {
            font-size: 18px;
            margin-bottom: 20px;
        }

    .btn {
        display: inline-block;
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .features {
        text-align: center;
    }

        .features h2 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .features ul {
            list-style-type: none;
            padding: 0;
        }

        .features li {
            font-size: 18px;
            margin-bottom: 10px;
        }

</style>

  
    <main>
        <section class="hero">
            <h1>Welcome to The Regista</h1>
            <p>Your destination for pre-sales applications!</p>
            <div class="text-center">
                <p>
                    <a class="btn btn-primary" asp-controller="Item" asp-action="Apply">Apply Now</a>
                </p>
            </div>
        </section>

        <section class="features">
            <h2>Our Features</h2>
            <ul>
                <li>Streamlined application process</li>
                <li>Quick approval turnaround</li>
                <li>Competitive pricing options</li>
                <li>Dedicated customer support</li>
            </ul>
        </section>
    </main>

