@model Candidate

<div class="display-6">
    Apply
</div>

<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>
    
    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="Size"></label>
        <select asp-for="Size" class="form-control">
            <option value="XS">XS</option>
            <option value="S">S</option>
            <option value="M">M</option>
            <option value="L">L</option>
            <option value="XL">XL</option>
            <option value="XXL">XXL</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Item</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedItem" value="Ballas" checked />
            <label>Ballas</label>
            <img style="width:10%;" src="/Images/balla.png" alt="BALLA">

        </p>
        <p>
            <input id="api" type="radio" asp-for="SelectedItem" value="Celtic" />
            <label>Celtic</label>
            <img style="width:10%;" src="/Images/celtic.png" alt="CELTIC">

        </p>
        <p>
            <input id="api" type="radio" asp-for="SelectedItem" value="Pikachu" />
            <label>Pikachu</label>
            <img style="width:10%;" src="/Images/pikachu.png" alt="PIKACHU">

        </p>
    </fieldset>

    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>
